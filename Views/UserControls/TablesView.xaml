<UserControl x:Class="POS_system_myowndesign.Views.UserControls.TablesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_system_myowndesign.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="604" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="TablesUI" TargetType="Button">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#5d5e5c"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="28"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Height="190">
            <Button Style="{StaticResource TablesUI}" Margin="25,10,170,0" x:Name="Table1"
                    Content="Table 1"/>
                <Button Style="{StaticResource TablesUI}" Margin="10,10,170,0" x:Name="Table2"
                    Content="Table 2"/>
                <Button Style="{StaticResource TablesUI}" Margin="10,10,0,0" x:Name="Table3"
                    Content="Table 3"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="190">
                <Button Style="{StaticResource TablesUI}" Margin="25,10,170,0" x:Name="Table4"
                    Content="Table 4"/>
                <Button Style="{StaticResource TablesUI}" Margin="10,10,170,0" x:Name="Table5"
                    Content="Table 5"/>
                <Button Style="{StaticResource TablesUI}" Margin="10,10,0,0" x:Name="Table6"
                    Content="Table 6"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="190">
                <Button Style="{StaticResource TablesUI}" Margin="25,10,170,0" x:Name="Table7"
                    Content="Table 7"/>
                <Button Style="{StaticResource TablesUI}" Margin="10,10,170,0" x:Name="Table8"
                    Content="Table 8"/>
                <Button Style="{StaticResource TablesUI}" Margin="10,10,0,0" x:Name="Table9"
                    Content="Table 9"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
