<Window x:Class="POS_system_myowndesign.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_system_myowndesign"
        mc:Ignorable="d"
        Title="POS Login" 
        Height="700" 
        Width="1100"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#F0F5FF">
    <Border CornerRadius="20" 
            Margin="20"
            Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Branding Area -->
            <Grid Background="#2496ff" >
                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            TextBlock.TextAlignment="Center">
                    <Image Source="/images/pos-terminal.png" 
                           Width="100" 
                           Height="100"
                           Margin="0,0,0,20"/>
                    <TextBlock Text="PROFESSIONAL POS" 
                               FontWeight="ExtraBold"
                               FontSize="28" 
                               Foreground="White"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Point of Sale System v3.0" 
                               FontSize="16" 
                               Foreground="white"/>
                    <StackPanel Orientation="Horizontal" 
                                 HorizontalAlignment="Center"
                                 Margin="0,40,0,0">
                        
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Right Side - Login Form -->
            <Grid Grid.Column="1" 
                  Margin="40,40,40,30">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="POS SYSTEM LOGIN" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,30"
                               HorizontalAlignment="Center"/>

                    <!-- Username Field -->
                    <TextBlock Text="USERNAME" 
                               FontSize="11" 
                               FontWeight="Bold"
                               Foreground="#777"
                               Margin="0,0,0,5"/>
                    <Border CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#DDD"
                            Padding="10,5"
                            Margin="0,0,0,15">
                        <TextBox x:Name="txtUsername" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Foreground="#333" />
                    </Border>

                    <!-- Password Field -->
                    <TextBlock Text="PASSWORD" 
                               FontSize="11" 
                               FontWeight="Bold"
                               Foreground="#777"
                               Margin="0,0,0,5"/>
                    <Border CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#DDD"
                            Padding="10,5"
                            Margin="0,0,0,25">
                        <PasswordBox x:Name="txtPassword" 
                                     BorderThickness="0" 
                                     Background="Transparent"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Foreground="#333"/>
                    </Border>

                    <!-- Login Button -->
                    <Button x:Name="btnLogin" 
                            Content="LOGIN TO SYSTEM" 
                            Background="#a6ff98" 
                            Foreground="White"
                            FontSize="14" 
                            FontWeight="Bold"
                            Height="50" 
                            BorderThickness="0"
                            Cursor="Hand" Click="btnLogin_Click"/>

                    <!-- Footer Text -->
                    <TextBlock Text="© 2023 POS Professional System" 
                               HorizontalAlignment="Center"
                               Foreground="#999"
                               FontSize="10"
                               Margin="0,30,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Close Button -->
            <Button x:Name="btnClose" 
                    Content="✕" 
                    FontSize="16"
                    Foreground="black"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,20,20,0"
                    Width="40" 
                    Height="40"
                    Click="btnClose_Click"/>
        </Grid>
    </Border>
</Window>